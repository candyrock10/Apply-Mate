{
  "manifest_version": 3,
  "name": "ApplyMate",
  "version": "1.0",

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage",
    "alarms"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content_scripts/scrape_jobs.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html"
  }
}
